{% extends 'base.html.twig' %}

{% block title %}SymRecipe - Modifier votre mot de passer utilisateur{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4 text-center">Formulaire de modification de mot de passe</h1>
        {% for message in app.flashes('notice') %}
            <div class="alert alert-dismissible alert-warning w-50">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                <strong>{{ message }}<strong>
            </div>
        {% endfor %}
        {{form(formEditPassword)}}
    </div>
{% endblock %}